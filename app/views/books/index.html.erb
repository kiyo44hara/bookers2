<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">

  <body>
    <div>
      <%= flash[:notice] %>

      <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>


      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <!--多分ヘッダーのなにかをのせるんだとおもう-->
        </nav>
      </header>

      <main>
        <p id="notice"></p>

        <div class="container px-5 px-sm-0">
          <div class="row">
            <!--ここからテンプレート-->
            <div class="col-md-3">
              <h2>User info</h2>
               <%= image_tag @user.get_profile_image(100,100) %>
               <table class="table">
                 <tbody>
                   <div>name【<%= @user.name %>】</div>

                   <div>introduction【<%= @user.introduction %>】</div>
                 </tbody>
               </table>

        <div class="row">
          
            <i class="fas fa-wrench"></i><%= link_to "edit", edit_user_path(@user) %><i class="fas fa-user-cog"></i> <!--後で画像でリンクつなげる-->
          
        </div>


       <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>

           <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
           <%= f.submit 'Create Book' %>
        <% end %>

            </div>

        <!--ここまでテンプレート-->
         <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          　<table class="table table-hover table-inverse">
          　 <thead>
            　 <tr>
            　    <th></th>
              　   <th>Title</th>
              　   <th>Body</th>
              　   <th colspan="3"></th>
            　 </tr>
          　 </thead>

            <% @books.each do |book| %>
            <thead>
            <tr>
              <th>
                <%= link_to book.user do %>
                  <%= image_tag book.user.get_profile_image(100,100) %></th>
                <% end %>
              <th>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
              </th>
              <th><%= book.body %></th>
              <th colspan="3"><!--３つのリンク--></th>
            </tr>
            </thead>
          <% end %>



          </table>
        </div>
       </div>
      </main>
  </body>
</html>
