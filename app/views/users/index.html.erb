<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
<!--userが沢山いるエリア-->
  <body>
    <div>
  <%= flash[:notice] %>
    </div>

      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <!--多分ヘッダーのなにかをのせるんだとおもう-->
        </nav>
      </header>

      <main>
        <p id="notice"></p>
        
        <div class="container px-5 px-sm-0">
          <div class="row">
            <!--ここからテンプレート-->
            <div class="col-md-3">
              <h2>User info</h2>
               <%= image_tag @user.get_profile_image(100,100) %>
               <table class="table">
                 <tbody>
                   <div>name【<%= @user.name %>】</div>

                   <div>introduction【<%= @user.introduction %>】</div>
                 </tbody>
               </table>

        <div class="row">
          <% if @user == current_user %>
            <i class="fas fa-wrench"></i><%= link_to "edit", edit_user_path(@user) %><i class="fas fa-user-cog"></i></i> <!--後で画像でリンクつなげる-->
          <% end %>
        </div>


       <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>

           <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
           <%= f.submit 'Create Book' %>
        <% end %>

            </div>
          <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          　<table class="table">
          　 <thead>
            　 <tr>
            　    <th>image</th>
              　   <th>name</th>
              　   <th colspan="3"></th>
            　 </tr>
          　 </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <th><%= image_tag user.get_profile_image(100,100) %></th>
              <th><%= user.name %></th>
              <th colspan="1">
                <%= link_to user_path(user.id) do %>
                  Show
                <% end %>
            <% end %>
              </th>
            </tr>
          </tbody>
        </table>
        </div>
       </div>
      </main>
      <footer></footer>
  </body>
</html>
