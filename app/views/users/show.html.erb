<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
<!--マイページに該当する部分(エディット直でいける)-->
  <body>
    <div>
  <%= flash[:notice] %>
    </div>

      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <!--多分ヘッダーのなにかをのせるんだとおもう-->
        </nav>
      </header>

      <main>
        
        <%= render 'books/list', book: @book %>

        <div class="row">
          <% if @user == current_user %>
            <%= link_to "edit", edit_user_path(@user) %> <!--後で画像でリンクつなげる-->
          <% end %>
        </div>


       <h2 class="mt-3">New Book</h2>
        <%= form_with model: @book do |f| %>
        <form action="/books" accept-charset="UTF-8" method="post">
           <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
           <%= f.submit 'Create Book' %>
        <% end %>
        </form>
            </div>

        <!--ここまでテンプレート-->
         <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          　<table class="table table-hover table-inverse">
          　 <thead>
            　 <tr>
            　    <th></th>
              　   <th>Title</th>
              　   <th>Opinion</th>
              　   <th colspan="3"></th>
            　 </tr>
          　 </thead>

            <% @books.each do |book| %>
            <thead>
            <tr>
              <th>
                  <%= link_to user_path do %>
                  <%= image_tag book.user.get_profile_image(100,100) %></th>
                  <% end %>
              <th>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
              </th>
              <th><%= book.body %></th>
              <th colspan="3"><!--３つのリンク--></th>
            </tr>
            </thead>
          <% end %>




          </table>
        </div>
       </div>
      </main>
  </body>
</html>
